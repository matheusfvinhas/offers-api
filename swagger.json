{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Pet da Glau API"
    },
    "consumes": ["application/json"],
    "produces": ["application/json"],
    "servers": [
        {
            "url": "/api/"
        }
    ],
    "paths": {
        "/authenticate": {
            "post": {
                "summary": "Authenticate user and returs jwt",
                "requestBody": {
                    "description": "User Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/User"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        }
    }
}
